@using System;
@using System.Linq;
@using Sandbox;
@using Sandbox.UI;
@inherits Panel;
@attribute [StyleSheet("/UI/Scoreboard/MyScoreboard.scss")]
@namespace Sketch.UI

<root>
    <div class="container">
        @foreach(IClient c in Game.Clients.OrderByDescending(cl => cl.GetInt("GameScore")))
        {
            <ScoreboardEntry Client=@c></ScoreboardEntry>
        }
    </div>
</root>

@code
{
    protected override int BuildHash()
    {
        return HashCode.Combine(Game.Clients.ToArray());
    }
}
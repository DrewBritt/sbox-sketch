@using System;
@using Sandbox;
@using Sandbox.UI;
@inherits Panel;
@attribute [StyleSheet("/UI/Scoreboard/MyScoreboard.scss")]
@namespace Sketch.UI

<root>
    <div class="container">
        @foreach(Client c in Client.All.OrderByDescending(cl => cl.GetInt("GameScore")))
        {
            <ScoreboardEntry Client=@c></ScoreboardEntry>
        }
    </div>
</root>

@code
{
    protected override int BuildHash()
    {
        return HashCode.Combine(Client.All);
    }
}